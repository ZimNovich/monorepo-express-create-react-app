{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb-base"
  ],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },
  "rules": {
  	"class-methods-use-this": "off",
  	"import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
  	"max-len": "off",
  	"no-underscore-dangle": ["error", { "allow": ["_id"] }],
  	"object-curly-newline": "off"
  }
}
